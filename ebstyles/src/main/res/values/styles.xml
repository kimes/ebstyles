<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Easybus">
        <!-- <item name="android:textColor">@color/gray80</item> -->
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Easybus.TextStyle">
        <item name="android:textSize">@dimen/textXSmall</item>
    </style>

    <style name="Easybus.TextStyle.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="Easybus.TextStyle.Medium">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="Easybus.TextStyle.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="Easybus.TextStyle.XLarge">
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="Easybus.TextStyle.Title">
        <item name="android:textSize">@dimen/textXSmall</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Easybus.TextStyle.Title.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="Easybus.TextStyle.Title.Medium">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="Easybus.TextStyle.Title.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="Easybus.TextStyle.Title.XLarge">
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="Easybus.TextStyle.Error">
        <item name="android:textColor">@color/red10</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Easybus.TextStyle.Success">
        <item name="android:textColor">@color/green10</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Easybus.HeadlineText">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Easybus.HeadlineText.Default">
        <item name="android:background">@color/gray10</item>
    </style>

    <style name="Easybus.HeadlineText.Error">
        <item name="android:background">@color/red20</item>
    </style>

    <style name="Easybus.EditTextStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColorHint">@color/gray50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_et</item>
    </style>

    <style name="Easybus.EditTextStyle.Round">
        <item name="android:background">@drawable/bg_et_round</item>
    </style>

    <style name="Easybus.ActionBarStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Easybus.ActionBarTitle">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="Easybus.ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@drawable/cs_btn</item>
        <item name="android:stateListAnimator">@animator/btn_anim</item>
    </style>

    <style name="Easybus.ButtonStyle.Primary">
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="Easybus.ButtonStyle.Secondary">
        <item name="android:background">@drawable/bg_btn_secondary</item>
    </style>

    <style name="Easybus.ButtonStyle.Tertiary">
        <item name="android:background">@drawable/bg_btn_tertiary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Easybus.ButtonStyle.Success">
        <item name="android:background">@drawable/bg_btn_success</item>
    </style>

    <style name="Easybus.ButtonStyle.Warning">
        <item name="android:background">@drawable/bg_btn_warning</item>
    </style>

    <style name="Easybus.ButtonStyle.Error">
        <item name="android:background">@drawable/bg_btn_error</item>
    </style>

    <style name="Easybus.ButtonStyle.Light">
        <item name="android:background">@drawable/bg_btn_light</item>
    </style>

    <style name="Easybus.ButtonStyle.Outline">
        <item name="android:textColor">@drawable/cs_btn_outline</item>
        <item name="android:background">@drawable/bg_btn_outline</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill">
        <item name="android:background">@drawable/bg_btn_pill</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Secondary">
        <item name="android:background">@drawable/bg_btn_pill_secondary</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Tertiary">
        <item name="android:background">@drawable/bg_btn_pill_tertiary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Success">
        <item name="android:background">@drawable/bg_btn_pill_success</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Warning">
        <item name="android:background">@drawable/bg_btn_pill_warning</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Error">
        <item name="android:background">@drawable/bg_btn_pill_error</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Light">
        <item name="android:background">@drawable/bg_btn_pill_light</item>
    </style>

    <style name="Easybus.ButtonStyle.Pill.Outline">
        <item name="android:textColor">@drawable/cs_btn_outline</item>
        <item name="android:background">@drawable/bg_btn_pill_outline</item>
    </style>

    <style name="Easybus.ImageButtonStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">15dp</item>
        <item name="android:stateListAnimator">@animator/btn_anim</item>
        <item name="android:tint">@drawable/cs_btn</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Square">
        <item name="android:background">@drawable/bg_btn_sq</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Square.Secondary">
        <item name="android:background">@drawable/bg_btn_sq_secondary</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Square.Tertiary">
        <item name="android:background">@drawable/bg_btn_sq_tertiary</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Square.Warning">
        <item name="android:tint">@drawable/cs_btn</item>
        <item name="android:background">@drawable/bg_btn_sq_warning</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round">
        <item name="android:background">@drawable/bg_btn_round</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Secondary">
        <item name="android:background">@drawable/bg_btn_round_secondary</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Tertiary">
        <item name="android:background">@drawable/bg_btn_round_tertiary</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Warning">
        <item name="android:tint">@drawable/cs_btn</item>
        <item name="android:background">@drawable/bg_btn_round_warning</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Outline">
        <item name="android:tint">@drawable/cs_btn_outline</item>
        <item name="android:background">@drawable/bg_btn_round_outline</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Outline.Warning">
        <item name="android:tint">@drawable/cs_btn_outline_warning</item>
        <item name="android:background">@drawable/bg_btn_round_outline_warning</item>
    </style>

    <style name="Easybus.ImageButtonStyle.Round.Outline.Error">
        <item name="android:tint">@drawable/cs_btn_outline_error</item>
        <item name="android:background">@drawable/bg_btn_round_outline_error</item>
    </style>

    <style name="Easybus.SpinnerStyle">
        <item name="android:dropDownVerticalOffset">38dp</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@drawable/bg_dropdown_menu</item>
    </style>

    <style name="Easybus.SpinnerStyle.Primary">
        <item name="android:background">@drawable/bg_spinner_primary</item>
    </style>

    <style name="Easybus.SpinnerStyle.Secondary">
        <item name="android:background">@drawable/bg_spinner_secondary</item>
    </style>

    <style name="Easybus.SpinnerStyle.Light">
        <item name="android:background">@drawable/bg_spinner_light</item>
    </style>

    <style name="Easybus.SpinnerStyle.Outline">
        <item name="android:background">@drawable/bg_spinner_outline</item>
    </style>

    <style name="Easybus.SpinnerStyle.Pill">
        <item name="android:background">@drawable/bg_spinner_pill</item>
    </style>

    <style name="Easybus.SpinnerStyle.Pill.Secondary">
        <item name="android:background">@drawable/bg_spinner_pill_secondary</item>
    </style>

    <style name="Easybus.SpinnerStyle.Pill.Light">
        <item name="android:background">@drawable/bg_spinner_pill_light</item>
    </style>

    <style name="Easybus.SpinnerStyle.Pill.Outline">
        <item name="android:background">@drawable/bg_spinner_pill_outline</item>
    </style>

    <style name="Easybus.CheckBoxStyle">
        <item name="android:textColor">@drawable/cs_cb</item>
    </style>

    <style name="Easybus.CheckBoxStyle.Button">
        <item name="android:paddingStart">8dp</item>
        <item name="android:button">@drawable/bg_cb_btn</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="Easybus.CheckBoxStyle.Panel">
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_cb</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="Easybus.SwitchStyle">
        <item name="android:textOn">@string/whitespace</item>
        <item name="android:textOff">@string/whitespace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:thumb">@drawable/bg_sw_thumb</item>
        <item name="thumbTextPadding">10dp</item>
        <item name="track">@drawable/bg_sw_track</item>
        <item name="showText">true</item>
        <item name="switchTextAppearance">@style/Easybus.SwitchTextAppearance</item>
    </style>

    <style name="Easybus.SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Easybus.DatePickerDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/Easybus.DatePickerStyle</item>
        <item name="android:textColor">@color/gray10</item>
        <item name="android:textColorPrimary">@color/gray10</item>
        <item name="android:textColorPrimaryInverse">@color/white</item><!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">@color/white</item><!-- header year color -->
        <item name="colorAccent">@color/gray40</item><!-- selected date color -->
    </style>

    <style name="Easybus.DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/gray10</item><!-- header background color -->
    </style>

    <style name="Easybus.CustomThemeOverlay_MaterialCalendarStyle"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Easybus.Custom_MaterialCalendarStyle</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray10</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/gray10</item>
        <!--
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnSecondary">@color/white</item> -->
    </style>

    <style name="Easybus.Custom_MaterialCalendarStyle"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>