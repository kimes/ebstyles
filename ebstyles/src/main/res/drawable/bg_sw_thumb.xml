<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="5dp" android:bottom="5dp"
                android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <size android:width="@dimen/switchThumbSize"
                        android:height="@dimen/switchThumbSize" />
                    <solid android:color="@color/blue30" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="5dp" android:bottom="5dp"
                android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <size android:width="@dimen/switchThumbSize"
                        android:height="@dimen/switchThumbSize" />
                    <solid android:color="@color/gray50" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>