<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/gray40">
            <item>
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/radiusXSmall" />
                            <solid android:color="@color/white" />
                        </shape>
                    </item>
                    <item android:right="15dp"
                        android:drawable="@drawable/ic_chevron_down"
                        android:gravity="center_vertical|right"
                        android:width="12dp" android:height="7.2dp" />
                </layer-list>
            </item>
        </ripple>
    </item>
    <item android:state_pressed="false"
        android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radiusXSmall" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:right="15dp"
                android:drawable="@drawable/ic_chevron_down"
                android:gravity="center_vertical|right"
                android:width="12dp" android:height="7.2dp" />
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radiusXSmall" />
                    <solid android:color="@color/gray40" />
                </shape>
            </item>
            <item android:right="15dp"
                android:drawable="@drawable/ic_chevron_down"
                android:gravity="center_vertical|right"
                android:width="12dp" android:height="7.2dp" />
        </layer-list>
    </item>
</selector>